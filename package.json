{
  "name": "amusement-hub-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=backend",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "npm run test --workspaces --if-present",
    "test:frontend": "npm test --workspace=frontend",
    "test:backend": "npm test --workspace=backend",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "description": "Amusement Hub - Full Stack Application with Frontend and Backend",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.0",
    "jsonwebtoken": "^9.0.2"
  }
}
